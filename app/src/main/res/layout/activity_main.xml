<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".Activity.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="33dp"

        >
        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Assignment Demo !"
            android:textSize="33dp" />
        <TextView
            android:id="@+id/tv2"
            android:layout_below="@id/tv1"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="23dp"
            android:text="This application showcase what are the concepts that i learned."
            android:textSize="23dp" />


        <Button
            android:id="@+id/listview"
            android:layout_width="600px"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv2"
            android:layout_height="wrap_content"
            android:text="View" />
        <Button
            android:id="@+id/userInteract"
            android:layout_width="600px"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/listview"
            android:layout_height="wrap_content"
            android:text="UserInteract" />

        <Button
            android:id="@+id/intent"
            android:layout_width="600px"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/userInteract"
            android:layout_height="wrap_content"
            android:text="Intent" />
        <Button
            android:id="@+id/relativelayout"
            android:layout_width="600px"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/intent"
            android:layout_height="wrap_content"
            android:text="Layouts" />
        <Button
            android:id="@+id/fragmentView"
            android:layout_width="600px"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/relativelayout"
            android:layout_height="wrap_content"
            android:text="Fragments" />
        <Button
            android:id="@+id/exit"
            android:layout_width="600px"
            android:background="@color/design_default_color_secondary"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/fragmentView"
            android:layout_height="wrap_content"
            android:text="Exit"
            android:layout_marginTop="50sp"
            android:theme="@style/Platform.MaterialComponents.Light"
            android:textColor="@color/black"/>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>